<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="Vbox" alignment="center" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/10.0.2-internal" fx:controller="HomeWorkLevelTwoLessonSeven.client.service.Controller">
    <VBox fx:id="chatWindow" managed="false" visible="false">
        <TextArea fx:id="mainTextArea" VBox.vgrow="ALWAYS" editable="false"/>
        <TextField fx:id="textField" promptText="Enter your message..."  VBox.vgrow="ALWAYS" onAction="#btnOneClickAction"/>
        <Button text="send message" onAction="#btnOneClickAction"/>
    </VBox>

</VBox>
